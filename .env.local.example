# Local Development Environment
# Copy this file to .env.local and customize for your local setup

# API Configuration - Local Development
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WEBSOCKET_URL=ws://localhost:8080
VITE_CDN_BASE_URL=http://localhost:9000

# Processing Configuration - Development Limits
VITE_MAX_FILE_SIZE_MB=50
VITE_SUPPORTED_FORMATS=pdf,docx,txt
VITE_PROCESSING_TIMEOUT_MS=120000
VITE_CHUNK_SIZE_MB=5
VITE_MAX_CONCURRENT_PROCESSING=3

# Performance Settings - Optimized for Development
VITE_GLASSMORPHIC_BLUR_MOBILE=4
VITE_GLASSMORPHIC_BLUR_DESKTOP=12
VITE_ANIMATION_DURATION_MS=300
VITE_DEBOUNCE_MS=500

# Feature Flags - Development Features
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=false

# Development OAuth (Mock/Test)
VITE_OAUTH_CLIENT_ID=dev_client_id
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# Local Database URLs
DATABASE_URL=postgresql://postgres:password@localhost:5432/pdf_saas_dev
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/pdf_saas_dev

# Development Debugging
VITE_APP_ENVIRONMENT=development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_PERFORMANCE_TRACKING=true

# Disable production services in development
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=
VITE_MIXPANEL_TOKEN=

# Local SMTP (MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=dev@localhost

# Test Stripe Keys
STRIPE_PUBLISHABLE_KEY=pk_test_dev_key
STRIPE_SECRET_KEY=sk_test_dev_key
STRIPE_WEBHOOK_SECRET=whsec_dev_secret

# Relaxed Rate Limiting for Development
RATE_LIMIT_REQUESTS_PER_MINUTE=300
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173