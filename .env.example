# PDF SaaS Platform Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WEBSOCKET_URL=ws://localhost:8080
VITE_CDN_BASE_URL=http://localhost:9000

# =============================================================================
# Processing Configuration
# =============================================================================
VITE_MAX_FILE_SIZE_MB=100
VITE_SUPPORTED_FORMATS=pdf,docx,txt,rtf
VITE_PROCESSING_TIMEOUT_MS=300000
VITE_CHUNK_SIZE_MB=10
VITE_MAX_CONCURRENT_PROCESSING=5

# =============================================================================
# Performance Settings (Glassmorphic UI Optimization)
# =============================================================================
VITE_GLASSMORPHIC_BLUR_MOBILE=8
VITE_GLASSMORPHIC_BLUR_DESKTOP=20
VITE_ANIMATION_DURATION_MS=200
VITE_DEBOUNCE_MS=300
VITE_LAZY_LOADING_THRESHOLD=100

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_COLLABORATION=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# =============================================================================
# Authentication & Security
# =============================================================================
VITE_OAUTH_CLIENT_ID=your_oauth_client_id_here
VITE_OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_JWT_SECRET=your_jwt_secret_here
VITE_SESSION_TIMEOUT_MS=3600000

# =============================================================================
# AI Services Configuration
# =============================================================================
VITE_GOOGLE_DOCUMENT_AI_ENDPOINT=https://documentai.googleapis.com/v1
VITE_AMAZON_TEXTRACT_ENDPOINT=https://textract.us-east-1.amazonaws.com
VITE_AI_PROVIDER_FALLBACK_ENABLED=true
VITE_AI_COST_OPTIMIZATION=true

# =============================================================================
# Database Configuration (Backend)
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/pdf_saas_platform
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017/pdf_saas_platform

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_S3_BUCKET=pdf-saas-platform-storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# Monitoring & Analytics
# =============================================================================
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_HOTJAR_ID=your_hotjar_id_here
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here

# =============================================================================
# Development & Debugging
# =============================================================================
VITE_APP_VERSION=0.1.0
VITE_APP_ENVIRONMENT=development
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug
VITE_PERFORMANCE_TRACKING=true

# =============================================================================
# Email Configuration (Backend)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@pdf-saas-platform.com

# =============================================================================
# Payment Processing
# =============================================================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# Rate Limiting & Security
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CSP_POLICY=default-src 'self'

# =============================================================================
# Kubernetes & Deployment
# =============================================================================
KUBERNETES_NAMESPACE=pdf-saas-platform
DOCKER_REGISTRY=your-registry.com/pdf-saas-platform
DEPLOYMENT_ENVIRONMENT=development