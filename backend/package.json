{
  "name": "pdfcraft-backend",
  "version": "1.0.0",
  "description": "PDF-to-PowerPoint converter and PDF merger API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc && cp -r src/config/migrations dist/config/ 2>/dev/null || true",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "deploy": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh",
    "deploy:staging": "chmod +x scripts/deploy.sh && ./scripts/deploy.sh staging",
    "docker:build": "docker build -t pdfcraft-api .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop pdfcraft-api",
    "pm2:restart": "pm2 restart pdfcraft-api",
    "pm2:logs": "pm2 logs pdfcraft-api",
    "pm2:monit": "pm2 monit",
    "validate": "chmod +x scripts/validate-production.sh && ./scripts/validate-production.sh",
    "setup:monitoring": "chmod +x scripts/setup-monitoring.sh && ./scripts/setup-monitoring.sh"
  },
  "dependencies": {
    "@types/winston": "^2.4.4",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.2.0",
    "bull": "^4.12.0",
    "canvas": "^3.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "libreoffice-convert": "^1.7.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "pptxgenjs": "^4.0.1",
    "puppeteer": "^24.22.0",
    "sharp": "^0.34.4",
    "sqlite3": "^5.1.7",
    "stripe": "^14.9.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/puppeteer": "^5.4.7",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "pdf",
    "converter",
    "powerpoint",
    "merge",
    "api"
  ],
  "author": "PDFCraft.Pro Team",
  "license": "MIT"
}
